{
  "name": "jthayne/dominion_randomizer",
  "description": "A small script that creates a randomized kingdom for a game of Dominion",
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.3"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "pestphp/pest-plugin": true
    }
  },
  "require": {
    "php": "^8.3",
    "catfan/medoo": "^2.1",
    "cerbero/enum": "^1.0",
    "psr/log": "^3.0",
    "respect/validation": "^2.3",
    "vlucas/phpdotenv": "^5.6",
    "symfony/yaml": "^7.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.60",
    "pestphp/pest": "^2.34",
    "php-parallel-lint/php-console-highlighter": "^1.0",
    "php-parallel-lint/php-parallel-lint": "^1.4",
    "phpcsstandards/phpcsextra": "^1.2",
    "phpmd/phpmd": "^2.15",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "scripts": {
    "install-codestandards": [
      "PHPCSStandards\\Composer\\Plugin\\Installers\\PHPCodeSniffer\\Plugin::run"
    ],
    "post-install-cmd": "@install-codestandards",
    "phpmd": "phpmd /var/www/html/build/phpmd.xml"
  }
}
